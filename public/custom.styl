* {
	font-family: "Courier New", sans-serif
}
table {
	border-collapse: collapse
	input {
		padding: 0
		outline: 0
		border: 0
		background: transparent
		color: #fff
		width: 30px
		height: 30px
		text-align: right
	}
}
td {
	width: 30px
	height: 30px
	border: 1px solid #fff
	padding: 0
	&.corner-tl {
		border-top: 0
		border-left: 0
	}
	&.corner-tr {
		border-top: 0
		border-right: 0
	}
	&.corner-trl {
		border-top: 0
		border-right: 0
		border-left: 0
	}
	&.corner-full {
		border: 0
	}
}
tr:last-child {
	td.corner-tl, td.corner-tr, td.corner-trl {
		border-bottom: 0
	}
}
md-menu-item {
	height: 30px
	min-height: 30px
}
md-menu-content {
	padding-top: 0
}
md-menu:first-child {
	float: left
}
.part {
	position: relative
}
.end-point-input {
	font-size: 20px
	margin-top: -6px !important
}
.step {
	md-input-container, h2 {
		display: inline-block !important
	}
	md-input-container {
		margin-bottom: -10px
	}
}